#pragma once

#define __MSYS_BIN__  "@MSYS_BIN@"
#define __MSYS_USR__  "@MSYS_USR@"
#define __MSYS_TMP__  "@MSYS_TMP@"

#ifndef _WIN32
#  define __S__   "/"
#  define __BIN__ "/bin"
#  define __USR__ "/usr"
#  define __TMP__ "/tmp"
#  define __AT_BIN__(A) "/bin/" A
#  define __AT_TMP__(A) "/tmp/" A
#  define __WITH_LIB_EXT__(A)  A ".so"
#  define __WITH_EXE_EXT__(A)  A
#else
#  define __S__   "\\"
#  define __BIN__ __MSYS_BIN__
#  define __USR__ __MSYS_USR__
#  define __TMP__ __MSYS_TMP__
#  define __AT_BIN__(A) __BIN__ "\\" A
#  define __AT_TMP__(A) __TMP__ "\\" A
#  define __WITH_LIB_EXT__(A)  A ".dll"
#  define __WITH_EXE_EXT__(A)  A ".exe"
#endif
